@model VPNAppFormS.Models.LoginViewModel

@{
    ViewData["Title"] = "登入";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1 class="text-center mb-4"><i class="bi bi-lock-fill"></i> 使用者登入</h1>

        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="LoginName" class="form-label"></label>
                <input asp-for="LoginName" class="form-control" />
                <span asp-validation-for="LoginName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">登入</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
